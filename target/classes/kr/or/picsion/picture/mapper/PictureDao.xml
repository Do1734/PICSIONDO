<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.picsion.picture.dao.PictureDao">
	<select id="writerPicture" resultType="kr.or.picsion.picture.dto.Picture">
		SELECT * FROM PICTURE WHERE userNo=#{userNo}
	</select>
	
	<!-- 사진 좋아요 생성 -->
	<insert id="respectIncrease">
	INSERT INTO RESPECT
		(picNo, userNo)
	VALUES
		( #{picNo}, #{userNo})
	</insert>
	
	<!-- 사진 업로드 저장 -->
	<insert id="insertPicture" parameterType="hashmap">		
	insert into PICTURE
	 (picNo, picTitle, picContent, picPath, picWater, picPrice, userNo)
	values (#{picture.picNo},#{picture.picTitle},#{picture.picContent},#{picture.picPath},"test",100,#{userNo})
	 <selectKey keyProperty="picture.picNo" resultType="Integer" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey> 
	</insert>
	
	<!-- 사진 업로드 저장 시 태그 저장 -->
	<insert id="insertTag">
	insert into TAG
	values (#{picNo},#{tagContent})
	</insert>
	
	<!--  사진 경로 뽑아내기? 
	<select id="searchPath">
		select picPath
	</select> -->
</mapper>