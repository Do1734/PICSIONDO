<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.picsion.picture.dao.PictureDao">
	<select id="writerPicture" resultType="kr.or.picsion.picture.dto.Picture">
		SELECT * FROM PICTURE WHERE userNo=#{userNo}
	</select>
	
	<!-- 사진 좋아요 생성 -->
	<insert id="respectIncrease">
	INSERT INTO RESPECT
		(picNo, userNo)
	VALUES
		( #{picNo}, #{userNo})
	</insert>
</mapper>